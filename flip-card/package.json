    "deploy": "npm run build && gh-pages -d src"
  },
  "author": "juns3700@gmail.com",
  "license": "MIT",
  "homepage": "https://justin3737.github.io/flip-card",
  "devDependencies": {
    "gh-pages": "^3.2.3",
    "tailwindcss": "^3.0.23"
  }
}

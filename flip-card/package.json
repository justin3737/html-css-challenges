{
  "name": "flip-card",
  "version": "1.0.0",
  "description": "css challenge - use pure js and tailwind css to finish the flip credit card animation",
  "main": "src/index.html",
  "scripts": {
    "build": "NODE_ENV=production tailwindcss -i ./src/css/style.css -o ./src/css/tailwind.css --minify",
